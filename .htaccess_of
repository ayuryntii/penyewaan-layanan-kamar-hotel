# .htaccess di root folder hotel
RewriteEngine On

# Redirect all admin requests to admin folder
RewriteRule ^admin/(.*)$ admin/$1 [L]

# Prevent directory listing
Options -Indexes

# Custom error pages
ErrorDocument 404 /hotel/404.php
ErrorDocument 403 /hotel/403.php
ErrorDocument 500 /hotel/500.php

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]